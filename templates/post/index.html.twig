{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}

	<div class="example-wrapper">
		<h2 class="mb-3">Posts</h2>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{  message }}
			</div>
		{% endfor %}

		<a href="{{ path('post.create') }}" class="btn btn-success">Create a new post</a>

		{% if posts %}
			<table class="table mt-3">
				<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Title</th>
					<th scope="col">Actions</th>
				</tr>
				</thead>
				<tbody>

				{% for post in posts %}
				<tr>
					<th scope="row">{{ post.id }}</th>
					<td><a href="{{ path('post.show', { id: post.id }) }}">{{ post.title }}</a></td>
					<td><a class="text-danger" href="{{ path('post.remove', { id: post.id }) }}">Delete</a></td>
				</tr>
				{% endfor %}
				</tbody>
			</table>
		{% else %}
			<p class="mt-3">
				There is no post!
			</p>
		{% endif %}
	</div>

{% endblock %}
